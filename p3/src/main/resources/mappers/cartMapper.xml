<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.zerock.mapper.CartMapper">
<select id="countColor" resultType="int">
	select count(*) from cart where uid=#{uid} and color=#{color}
</select>

<insert id="insertCart">
	insert into cart (o_id,m_id,s_id,uid,price,qty,point,signdate,file1,color) values 
	(#{o_id},#{m_id},#{s_id},#{uid},#{price},#{qty},#{point},#{signdate},#{file1},#{color})
</insert>

<select id="cartAll" resultType="CartVO">
	select * from cart where uid=#{uid}
</select>

<delete id="deleteCart">
	delete from cart where ct_uid = #{ct_uid}
</delete>
</mapper>